<div class="row">
	<div class="columns small-12 medium-6 large-3">
		<div class="panel"><%= @current_balance_btc.to_s + " BTC" %></div>
	</div>
	<div class="columns small-12 medium-6 large-3">
		<div class="panel"><%= @current_balance_usd.to_s + " USD" %></div>
	</div>
	<div class="columns small-12 medium-6 large-3">
		<div class="panel"><%= "Buy Price: " + @current_buy_price %></div>
	</div>
	<div class="columns small-12 medium-6 large-3">
		<div class="panel"><%= "Sell Price: " + @current_sell_price %></div>
	</div>
</div>

<p><%= @formcontent rescue "Noasdfne" %></p>

<%= form_tag dashboard_transact_path, id: 'transfer_form', class: 'row' %>
  <%= hidden_field_tag 'exchange_rate', @exchange_rate %>
  <%= hidden_field_tag 'fee_amount', (@send_money[:fee_amount] rescue 0) %>

  <h4>Send Money</h4>

	<% if @members.count != 0 %>

  <div class="form-group columns small-12 medium-6 large-3">
    <%= select_tag 'recipient', options_from_collection_for_select(@members, "email", "email"), placeholder: 'Recipient Username', class: 'form-control' %>
  </div>

  <div class="form-group columns small-12 medium-6 large-3">
    <div class="row">
      <div class="columns small-6">
        <%= text_field_tag 'amount_usd', '', placeholder: 'USD amount', class: 'form-control' %>
      </div>
      <div class="columns small-6">
        <%= text_field_tag 'amount_btc', '', placeholder: 'BTC amount', class: 'form-control' %>
      </div><!-- /input-group -->
    </div><!-- /input-group -->
  </div>

  <div class="form-group columns small-12 medium-6 large-3">
    <div class="input-group">
      <%= text_field_tag 'message', '', placeholder: 'A kind word or two', class: 'form-control' %>
    </div>
  </div>

	<div class="form-group columns small-12 medium-6 large-3">
  	<%= submit_tag 'Send Money', class: 'button postfix' %>
  </div>
	<% else %>
		<p>No other members in group to send to!</p>
  <% end %>
</form>