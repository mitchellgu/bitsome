<div class="columns small-centered large-8 medium-10 small-12">
  <h4>Group Transaction History</h4>
  <table id="transaction-history-table" class="table table-striped table-responsive table-hover table-condensed account-activity-history-table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Amount</th>
        <th>Sender</th>
        <th><i class="fa fa-arrow-right"></i></th>
        <th>Recipient</th>
        <th>Message</th>
      </tr>
    </thead>
    <tbody>
    <% @data.each_with_index do |e, i| %>
      <tr>
        <td>
          <%= DateTime.parse(e.time).strftime('%b %d') %>
        </td>
        <td>
          <span class="label round" style="background-color: rgb(0,<%= (e.amount/@max*75+100).round %>,<%= (e.amount/@max*120+135).round %>)"><%= sprintf('%.2f m', e.amount * 1000) %>BTC</span>
        </td>
        <td>
          <%= e.sender %>
        </td>
        <td>
          <i class="fa fa-arrow-right"></i>
        </td>
        <td>
          <%= e.receiver %>
        </td>
        <td style="width: 150px;"><%= e.notes %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="hide reveal-modal" id="modal">
    <h2>Transaction Details</h2>
    <p class="lead">Note Content</p>
    <a href="">View this transaction on Coinbase</a>
  </div>
</div>